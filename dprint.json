{
	"useTabs": true,
	"indentWidth": 4,
	"lineWidth": 120,
	"includes": ["*.{ts,json,md,html}"],
	"excludes": ["**/lib", "**/node_modules", "**/*-lock.json"],
	"malva": {
		"declarationOrder": "concentric"
	},
	"plugins": [
		"https://plugins.dprint.dev/biome-0.7.1.wasm",
		"https://plugins.dprint.dev/g-plane/malva-v0.11.2.wasm",
		"https://plugins.dprint.dev/g-plane/markup_fmt-v0.19.1.wasm",
		"https://plugins.dprint.dev/markdown-0.18.0.wasm"
	]
}
